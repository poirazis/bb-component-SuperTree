{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperTree",
    "friendlyName": "Super TreeList",
    "description": "A Tree View component for Budibase",
    "hasChildren": true,
    "showEmptyState": false,
    "styles": ["size", "background", "border"],
    "icon": "TreeCollapseAll",
    "actions": [
      { "type": "RefreshDatasource" },
      { "type": "ClearRowSelection" }
    ],
    "context": [
      {
        "type": "static",
        "scope": "global",
        "values": [
          {
            "label": "Selected Rows",
            "key": "selected",
            "type": "array"
          },
          {
            "label": "Selected IDs",
            "key": "selectedIds",
            "type": "array"
          }
        ]
      },
      {
        "scope": "local",
        "type": "schema"
      },
      {
        "type": "static",
        "scope": "local",
        "values": [
          {
            "label": "Node Children",
            "key": "children",
            "type": "array"
          },
          {
            "label": "Group",
            "key": "group",
            "type": "string"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "select",
        "key": "controlType",
        "label": "Control Type",
        "defaultValue": "tree",
        "options": [
          { "label": "Tree View", "value": "tree" },
          { "label": "List View", "value": "list" },
          { "label": "Accordion", "value": "accordion" }
        ]
      },
      {
        "type": "select",
        "key": "treeType",
        "label": "Tree Type",
        "defaultValue": "flat",
        "options": [
          { "label": "Flat", "value": "flat" },
          { "label": "Recursive", "value": "recursive" },
          { "label": "Group By", "value": "groupBy" }
        ]
      },
      {
        "type": "dataSource",
        "key": "datasource",
        "label": "Data",
        "required": true
      },
      {
        "type": "field",
        "key": "idColumn",
        "label": "ID Column",
        "defaultValue": "_id",
        "required": true
      },
      {
        "type": "field",
        "key": "joinField",
        "label": "Join Column",
        "resetOn": "datasource",
        "dependsOn": { "setting": "treeType", "value": "recursive" }
      },
      {
        "type": "field",
        "key": "groupField",
        "label": "Group By",
        "resetOn": "datasource",
        "dependsOn": { "setting": "treeType", "value": "groupBy" }
      },
      {
        "type": "field/sortable",
        "key": "sortColumn",
        "label": "Sort By",
        "resetOn": "datasource"
      },
      {
        "type": "select",
        "key": "sortOrder",
        "label": "Sort Order",
        "options": [
          { "label": "Ascending", "value": "ascending" },
          { "label": "Descending", "value": "descending" }
        ]
      },
      {
        "type": "filter",
        "key": "filter",
        "label": "Filter"
      },
      {
        "type": "number",
        "label": "Limit",
        "key": "limit",
        "defaultValue": 50
      },
      {
        "type": "boolean",
        "key": "disabled",
        "label": "Disabled"
      },
      {
        "type": "boolean",
        "key": "rootless",
        "label": "Rootless",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "key": "header",
        "label": "Header",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "key": "nodeSelection",
        "label": "Selection",
        "showInBar": true,
        "barStyle": "buttons",
        "barIcon": "SelectBox",
        "barTitle": "Select Rows",
        "defaultValue": false
      },
      {
        "section": true,
        "name": "Tree Settings",
        "settings": [
          {
            "type": "text",
            "key": "branchName",
            "label": "Root Node Text",
            "dependsOn": {
              "setting": "rootless",
              "value": true,
              "invert": true
            }
          },
          {
            "type": "boolean",
            "key": "collapsed",
            "label": "Collapsed",
            "defaultValue": true,
            "dependsOn": {
              "setting": "rootless",
              "value": true,
              "invert": true
            }
          }
        ]
      },
      {
        "section": true,
        "name": "Header Settings",
        "dependsOn": "header",
        "collapsed": true,
        "settings": [
          {
            "type": "text",
            "key": "headerText",
            "label": "Text"
          },
          {
            "type": "boolean",
            "key": "searchable",
            "label": "Search",
            "defaultValue": true
          },
          {
            "type": "boolean",
            "key": "headerMenu",
            "label": "Header Menu",
            "defaultValue": false
          },
          {
            "type": "number",
            "key": "headerShowButtons",
            "label": "Show Buttons",
            "min": 0,
            "defaultValue": 0,
            "dependsOn": "headerMenu"
          },
          {
            "type": "buttonConfiguration",
            "key": "headerMenuItems",
            "dependsOn": "headerMenu",
            "nested": true,
            "wide": true
          }
        ]
      },
      {
        "section": true,
        "name": "Node Settings",
        "collapsed": true,
        "settings": [
          {
            "type": "text",
            "key": "labelTemplate",
            "label": "Label",
            "nested": true
          },
          {
            "type": "boolean",
            "key": "nodeMenu",
            "label": "Node Menu",
            "defaultValue": false
          },
          {
            "type": "number",
            "key": "nodeShowButtons",
            "label": "Show Buttons",
            "min": 0,
            "defaultValue": 0,
            "dependsOn": "nodeMenu"
          },
          {
            "type": "buttonConfiguration",
            "key": "nodeMenuItems",
            "dependsOn": { "setting": "nodeMenu", "value": true },
            "wide": true,
            "nested": true
          }
        ]
      },
      {
        "section": true,
        "name": "Group By Settings",
        "dependsOn": { "setting": "treeType", "value": "groupBy" },
        "settings": [
          {
            "type": "text",
            "key": "groupNodeLabel",
            "label": "Group Label",
            "nested": true
          },
          {
            "type": "boolean",
            "key": "groupSelectable",
            "label": "Selectable",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "groupSelectChildren",
            "label": "Select Children",
            "dependsOn": "groupSelectable",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "groupMenu",
            "label": "Group Menu",
            "defaultValue": false
          },
          {
            "type": "number",
            "key": "groupShowButtons",
            "label": "Show Buttons",
            "min": 0,
            "defaultValue": 0,
            "dependsOn": "groupMenu"
          },
          {
            "type": "buttonConfiguration",
            "key": "groupMenuItems",
            "nested": true,
            "dependsOn": "groupMenu",
            "context": [{ "key": "group", "label": "Group" }],
            "wide": true
          }
        ]
      },
      {
        "section": true,
        "dependsOn": "nodeSelection",
        "name": "Selection Settings",
        "collapsed": true,
        "settings": [
          {
            "type": "boolean",
            "key": "checkboxes",
            "label": "Checkboxes",
            "dependsOn": "nodeSelection"
          },
          {
            "type": "number",
            "key": "maxNodeSelection",
            "label": "Max Selected",
            "dependsOn": "nodeSelection",
            "min": 1,
            "defaultValue": 1
          },
          {
            "type": "text",
            "key": "selectedIds",
            "label": "Selected IDs",
            "placeholder": "Comma seperated list",
            "dependsOn": "nodeSelection"
          }
        ]
      },
      {
        "section": true,
        "name": "Events",
        "collapsed": true,
        "settings": [
          {
            "type": "event",
            "key": "onNodeSelect",
            "dependsOn": "nodeSelection",
            "label": "On Node Select",
            "nested": true
          },
          {
            "type": "event",
            "key": "onNodeClick",
            "label": "On Node Click",
            "nested": true
          },
          {
            "type": "event",
            "dependsOn": "groupSelectable",
            "key": "onGroupSelect",
            "label": "On Group Select",
            "context": [
              {
                "label": "Node Id",
                "key": "id"
              },
              {
                "label": "Node Label",
                "key": "label"
              }
            ]
          },
          {
            "type": "event",
            "key": "onGroupClick",
            "dependsOn": { "setting": "treeType", "value": "groupBy" },
            "label": "On Group Click",
            "context": [
              {
                "label": "Node Value",
                "key": "id"
              },
              {
                "label": "Node Label",
                "key": "label"
              }
            ]
          }
        ]
      },
      {
        "section": true,
        "tag": "style",
        "name": "Tree Settings",
        "settings": [
          {
            "type": "select",
            "key": "chevronPosition",
            "defaultValue": "left",
            "resetOn": "controlType",
            "label": "Chevron",
            "dependsOn": {
              "setting": "controlType",
              "value": "accordion",
              "invert": true
            },
            "options": [
              { "label": "Left", "value": "left" },
              { "label": "Right", "value": "right" }
            ]
          },
          {
            "type": "boolean",
            "key": "quiet",
            "label": "Quiet"
          },
          {
            "type": "icon",
            "key": "nodeMenuIcon",
            "label": "Menu Menu Icon",
            "defaultValue": "ri-more-fill",
            "dependsOn": "nodeMenu"
          }
        ]
      },
      {
        "section": true,
        "tag": "style",
        "name": "Node Settings",
        "settings": [
          {
            "type": "icon",
            "key": "nodeIcon",
            "label": "Node Icon"
          },
          {
            "type": "text",
            "key": "nodeFGColor",
            "label": "Text Color",
            "nested": true
          },
          {
            "type": "text",
            "key": "nodeBGColor",
            "label": "Background",
            "nested": true
          }
        ]
      },
      {
        "section": true,
        "tag": "style",
        "name": "Group Settings",
        "dependsOn": { "setting": "treeType", "value": "groupBy" },
        "settings": [
          {
            "type": "icon",
            "key": "groupNodeIcon",
            "label": "Icon"
          },
          {
            "type": "text",
            "key": "groupFGColor",
            "label": "Text Color",
            "nested": true
          },
          {
            "type": "text",
            "key": "groupBGColor",
            "label": "Background",
            "nested": true
          }
        ]
      },
      {
        "type": "select",
        "tag": "style",
        "label": "Flex Mode",
        "showLabel": false,
        "key": "flex",
        "showInBar": true,
        "barStyle": "buttons",
        "options": [
          {
            "label": "Shrink",
            "value": false,
            "barIcon": "Minimize",
            "barTitle": "Shrink container"
          },
          {
            "label": "Grow",
            "value": true,
            "barIcon": "Maximize",
            "barTitle": "Grow container"
          }
        ],
        "defaultValue": false
      }
    ]
  }
}
