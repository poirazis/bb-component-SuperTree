{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperTree",
    "friendlyName": "Super Tree",
    "description": "A Tree View component for Budibase",
    "hasChildren": true,
    "showEmptyState": false,
    "actions": ["RefreshDatasource"],
    "styles": ["size"],
    "icon": "TreeCollapseAll",
    "context": [
      {
        "type": "static",
        "scope": "local",
        "values": [
          {
            "label": "Node ID",
            "key": "nodeId",
            "type": "text"
          }
        ]
      },
      {
        "type": "static",
        "scope": "local",
        "values": [
          {
            "label": "Node Child Rows",
            "key": "children",
            "type": "array"
          }
        ]
      },
      {
        "type": "static",
        "scope": "local",
        "values": [
          {
            "label": "Node Label",
            "key": "nodeLabel",
            "type": "text"
          }
        ]
      },
      {
        "type": "static",
        "scope": "global",
        "values": [
          {
            "label": "Selected",
            "key": "selected",
            "type": "array"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "dataSource",
        "key": "datasource",
        "label": "Data",
        "required": true
      },
      {
        "type": "field/sortable",
        "key": "sortColumn",
        "label": "Sort By",
        "resetOn": "datasource"
      },
      {
        "type": "select",
        "key": "sortOrder",
        "label": "Sort Order",
        "options": [
          { "label": "Ascending", "value": "ascending" },
          { "label": "Descending", "value": "descending" }
        ]
      },
      {
        "type": "field",
        "key": "valueColumn",
        "label": "Value Column",
        "resetOn": "datasource",
        "defaultValue": "_id",
        "required": true
      },
      {
        "type": "filter",
        "key": "filter",
        "label": "Filter"
      },
      {
        "type": "number",
        "label": "Limit",
        "key": "limit",
        "defaultValue": 50
      },
      {
        "type": "select",
        "key": "treeType",
        "label": "Tree Type",
        "defaultValue": "list",
        "options": [
          { "label": "List", "value": "list" },
          { "label": "Recursive", "value": "recursive" },
          { "label": "Group By", "value": "groupBy" }
        ]
      },
      {
        "type": "boolean",
        "key": "disabled",
        "label": "Disabled"
      },
      {
        "type": "boolean",
        "key": "rootless",
        "label": "Rootless",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "key": "header",
        "label": "Header",
        "defaultValue": true
      },
      {
        "type": "text",
        "key": "branchName",
        "label": "Root Node Text",
        "dependsOn": { "setting": "rootless", "value": true, "invert": true }
      },
      {
        "type": "boolean",
        "key": "collapsed",
        "label": "Collapsed",
        "defaultValue": true,
        "dependsOn": { "setting": "rootless", "value": true, "invert": true }
      },
      {
        "type": "boolean",
        "key": "nodeSelection",
        "label": "Node Selection"
      },
      {
        "type": "boolean",
        "key": "checkboxes",
        "label": "Checkboxes",
        "dependsOn": "nodeSelection"
      },
      {
        "type": "number",
        "key": "maxNodeSelection",
        "label": "Max Selected",
        "dependsOn": "nodeSelection",
        "min": 1,
        "defaultValue": 1
      },
      {
        "type": "text",
        "key": "selectedIds",
        "label": "Selected IDs",
        "placeholder": "Comma seperated list",
        "dependsOn": "nodeSelection"
      },
      {
        "section": true,
        "name": "Tree Settings",
        "settings": [
          {
            "type": "field",
            "key": "labelColumn",
            "label": "Label Column",
            "resetOn": "datasource"
          },
          {
            "type": "text",
            "key": "labelTemplate",
            "label": "Label Template",
            "placeholder": "{{ row }}",
            "nested": true
          },
          {
            "type": "boolean",
            "key": "showRelationships",
            "label": "List Rel/s",
            "dependsOn": { "setting": "groupBy", "value": true, "invert": true }
          },
          {
            "type": "multifield",
            "key": "linkFields",
            "label": "Link Columns",
            "resetOn": ["datasource", "showRelationships"],
            "dependsOn": "showRelationships"
          }
        ]
      },
      {
        "section": true,
        "name": "Group By Settings",
        "dependsOn": { "setting": "treeType", "value": "groupBy" },
        "settings": [
          {
            "type": "field",
            "key": "groupField",
            "label": "Group By",
            "resetOn": "datasource"
          },
          {
            "type": "text",
            "key": "groupNodeLabel",
            "label": "Group Label",
            "nested": true,
            "placeholder": "{{ value }}"
          },
          {
            "type": "boolean",
            "key": "groupNodeIcons",
            "label": "Group Icons"
          },
          {
            "type": "icon",
            "key": "groupNodeIcon",
            "dependsOn": "groupNodeIcons",
            "resetOn": "groupNodeIcons",
            "label": "Group Node Icon"
          }
        ]
      },
      {
        "section": true,
        "name": "Recursion Settings",
        "dependsOn": { "setting": "treeType", "value": "recursive" },
        "settings": [
          {
            "type": "field",
            "key": "joinField",
            "label": "Parent Value",
            "resetOn": "datasource"
          },
          {
            "type": "number",
            "key": "depth",
            "label": "Max Depth",
            "resetOn": "recursive"
          }
        ]
      },
      {
        "section": true,
        "name": "Header Settings",
        "dependsOn": "header",
        "settings": [
          {
            "type": "text",
            "key": "headerText",
            "label": "Text"
          },
          {
            "type": "boolean",
            "key": "searchable",
            "label": "Search",
            "defaultValue": true
          },
          {
            "type": "buttonConfiguration",
            "key": "buttons",
            "label": "Buttons"
          }
        ]
      },
      {
        "section": true,
        "name": "Events",
        "settings": [
          {
            "type": "event",
            "key": "onNodeSelect",
            "dependsOn": "nodeSelection",
            "label": "On Node Select",
            "context": [
              {
                "label": "Node Value",
                "key": "id"
              },
              {
                "label": "Node Label",
                "key": "label"
              }
            ]
          },
          {
            "type": "event",
            "key": "onNodeClick",
            "label": "On Node Click",
            "context": [
              {
                "label": "Node Value",
                "key": "id"
              },
              {
                "label": "Node Label",
                "key": "label"
              }
            ]
          },
          {
            "type": "event",
            "key": "onLinkNodeClick",
            "label": "On Link Click",
            "context": [
              {
                "label": "Node Value",
                "key": "id"
              },
              {
                "label": "Node Label",
                "key": "label"
              }
            ]
          }
        ]
      },
      {
        "section": true,
        "tag": "style",
        "name": "Tree Settings",
        "settings": [
          {
            "type": "boolean",
            "key": "quiet",
            "label": "Quiet"
          },
          {
            "type": "boolean",
            "key": "rootIcons",
            "label": "Root Icon"
          },
          {
            "type": "icon",
            "key": "rootIcon",
            "label": "Root Node Icon",
            "dependsOn": "rootIcons",
            "resetOn": "rootIcons"
          },
          {
            "type": "boolean",
            "key": "nodeIcons",
            "label": "Node Icons"
          },
          {
            "type": "icon",
            "key": "nodeIcon",
            "label": "Node Icon",
            "dependsOn": "nodeIcons",
            "resetOn": "nodeIcons"
          }
        ]
      }
    ]
  }
}
