{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperTree",
    "friendlyName": "Super TreeList",
    "description": "A Tree View component for Budibase",
    "hasChildren": true,
    "showEmptyState": false,
    "styles": ["size", "padding", "border", "background"],
    "icon": "TreeCollapseAll",
    "actions": [
      { "type": "RefreshDatasource" },
      { "type": "ClearRowSelection" }
    ],
    "context": [
      {
        "type": "static",
        "scope": "global",
        "values": [
          {
            "label": "Selected Nodes",
            "key": "selected",
            "type": "array"
          },
          {
            "label": "Selected IDs",
            "key": "selectedIds",
            "type": "array"
          },
          {
            "label": "Selected Ancestors",
            "key": "selectedAncestors",
            "type": "array"
          },
          {
            "label": "Selected Descendants",
            "key": "selectedDescendants",
            "type": "array"
          },
          {
            "label": "breadcrumbs",
            "key": "breadcrumbs",
            "type": "string"
          },
          {
            "label": "Selected Group",
            "key": "selectedGroups",
            "type": "array"
          },
          {
            "label": "Current Node",
            "key": "row",
            "type": "object"
          }
        ]
      },
      {
        "type": "static",
        "scope": "local",
        "values": [
          {
            "label": "Node ID",
            "key": "id",
            "type": "string"
          },
          {
            "label": "Node Label",
            "key": "label",
            "type": "string"
          },
          {
            "label": "Node Children",
            "key": "children",
            "type": "array"
          },
          {
            "label": "Group",
            "key": "group",
            "type": "string"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "dataSource",
        "key": "datasource",
        "label": "Data"
      },
      {
        "type": "field",
        "key": "idColumn",
        "label": "ID Column",
        "resetOn": "datasource"
      },
      {
        "type": "field/sortable",
        "key": "sortColumn",
        "label": "Sort By",
        "resetOn": "datasource",
        "dependsOn": {
          "setting": "structuredData",
          "value": true,
          "invert": true
        }
      },
      {
        "type": "select",
        "key": "sortOrder",
        "label": "Sort Order",
        "options": [
          { "label": "Ascending", "value": "ascending" },
          { "label": "Descending", "value": "descending" }
        ],
        "dependsOn": {
          "setting": "structuredData",
          "value": true,
          "invert": true
        }
      },
      {
        "type": "filter",
        "key": "filter",
        "label": "Filter",
        "dependsOn": {
          "setting": "structuredData",
          "value": true,
          "invert": true
        }
      },
      {
        "type": "number",
        "label": "Limit",
        "key": "limit",
        "dependsOn": {
          "setting": "structuredData",
          "value": true,
          "invert": true
        },
        "defaultValue": 50
      },
      {
        "type": "select",
        "key": "controlType",
        "label": "Control Type",
        "defaultValue": "tree",
        "options": [
          { "label": "Tree View", "value": "tree" },
          { "label": "List View", "value": "list" }
        ]
      },
      {
        "type": "select",
        "key": "treeType",
        "label": "Tree Type",
        "defaultValue": "flat",
        "options": [
          { "label": "Flat", "value": "flat" },
          { "label": "Recursive", "value": "recursive" },
          { "label": "Group By", "value": "groupBy" }
        ]
      },
      {
        "type": "field",
        "key": "joinField",
        "label": "Join Column",
        "resetOn": "datasource",
        "dependsOn": { "setting": "treeType", "value": "recursive" }
      },
      {
        "type": "multifield",
        "key": "groupFields",
        "label": "Group By",
        "resetOn": ["datasource", "treeType"],
        "dependsOn": { "setting": "treeType", "value": "groupBy" }
      },
      {
        "type": "boolean",
        "key": "disabled",
        "label": "Disabled"
      },
      {
        "type": "boolean",
        "key": "rootless",
        "label": "No Root",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "key": "header",
        "label": "Header",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "key": "showCount",
        "label": "Show Count",
        "defaultValue": true
      },
      {
        "section": true,
        "name": "Root Settings",
        "dependsOn": {
          "setting": "rootless",
          "value": false
        },
        "settings": [
          {
            "type": "text",
            "key": "rootNodeName",
            "label": "Root Node Text",
            "dependsOn": {
              "setting": "rootless",
              "value": true,
              "invert": true
            }
          },
          {
            "type": "buttonConfiguration",
            "key": "rootButtons",
            "label": "Menu",
            "nested": true,
            "wide": true
          },
          {
            "type": "boolean",
            "key": "collapsed",
            "label": "Collapsed",
            "defaultValue": true,
            "dependsOn": {
              "setting": "rootless",
              "value": true,
              "invert": true
            }
          }
        ]
      },
      {
        "section": true,
        "name": "Header Settings",
        "dependsOn": "header",
        "collapsed": true,
        "settings": [
          {
            "type": "text",
            "key": "headerText",
            "label": "Text"
          },
          {
            "type": "select",
            "key": "searchMode",
            "label": "Search",
            "options": [
              { "label": "Disabled", "value": false },
              { "label": "Client Side", "value": "client" },
              { "label": "Server Side", "value": "server" }
            ],
            "defaultValue": "client"
          },
          {
            "type": "boolean",
            "key": "headerMenu",
            "label": "Header Menu",
            "defaultValue": false
          },
          {
            "type": "number",
            "key": "headerShowButtons",
            "label": "Show Buttons",
            "min": 0,
            "defaultValue": 0,
            "dependsOn": "headerMenu"
          },
          {
            "type": "buttonConfiguration",
            "key": "headerMenuItems",
            "dependsOn": "headerMenu",
            "nested": true,
            "wide": true
          }
        ]
      },
      {
        "section": true,
        "name": "Node Settings",
        "collapsed": true,
        "settings": [
          {
            "type": "field",
            "key": "labelColumn",
            "label": "Label Column",
            "resetOn": "datasource"
          },
          {
            "type": "text",
            "key": "labelTemplate",
            "resetOn": "datasource",
            "label": "Label",
            "nested": true
          },
          {
            "type": "columns",
            "key": "listColumns",
            "label": "List Columns"
          },
          {
            "type": "buttonConfiguration",
            "key": "nodeMenuItems",
            "wide": true,
            "nested": true
          }
        ]
      },
      {
        "section": true,
        "name": "Group By Settings",
        "dependsOn": { "setting": "treeType", "value": "groupBy" },
        "settings": [
          {
            "type": "text",
            "key": "groupNodeLabel",
            "label": "Group Label",
            "nested": true
          },
          {
            "type": "boolean",
            "key": "groupSelectable",
            "label": "Selectable",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "groupSelectChildren",
            "label": "Select Children",
            "dependsOn": "groupSelectable",
            "defaultValue": false
          },
          {
            "type": "buttonConfiguration",
            "key": "groupMenuItems",
            "nested": true,
            "context": [{ "key": "group", "label": "Group" }],
            "wide": true
          }
        ]
      },
      {
        "section": true,
        "name": "Selection Settings",
        "collapsed": true,
        "settings": [
          {
            "type": "boolean",
            "key": "checkboxes",
            "label": "Checkboxes"
          },
          {
            "type": "number",
            "key": "maxNodeSelection",
            "label": "Max Selected",
            "min": 1,
            "defaultValue": 1
          },
          {
            "type": "text",
            "key": "selectedIds",
            "label": "Selected IDs",
            "placeholder": "Comma seperated list"
          }
        ]
      },
      {
        "section": true,
        "name": "Events",
        "collapsed": true,
        "settings": [
          {
            "type": "event",
            "key": "onNodeSelect",
            "label": "On Node Select",
            "context": [
              {
                "label": "Current Row",
                "key": "row"
              }
            ]
          },
          {
            "type": "event",
            "dependsOn": "groupSelectable",
            "key": "onGroupSelect",
            "label": "On Group Select",
            "context": [
              {
                "label": "Group",
                "key": "group"
              }
            ]
          }
        ]
      },
      {
        "section": true,
        "tag": "style",
        "name": "Tree Settings",
        "settings": [
          {
            "type": "select",
            "key": "chevronPosition",
            "defaultValue": "left",
            "resetOn": "controlType",
            "label": "Chevron",
            "options": [
              { "label": "Left", "value": "left" },
              { "label": "Right", "value": "right" }
            ]
          },
          {
            "type": "boolean",
            "key": "quiet",
            "label": "Quiet"
          },
          {
            "type": "phosphorIcon",
            "key": "nodeMenuIcon",
            "label": "Menu Icon",
            "defaultValue": "ri-more-fill"
          },
          {
            "type": "select",
            "key": "slotPosition",
            "label": "Slot Position",
            "defaultValue": "after",
            "options": [
              { "label": "Disabled", "value": false },
              { "label": "In Leaf", "value": "leaf" },
              { "label": "In Branch", "value": "branch" },
              { "label": "In Group", "value": "group" },
              { "label": "After Tree", "value": "after" },
              { "label": "In All Nodes", "value": "all" }
            ]
          }
        ]
      },
      {
        "section": true,
        "tag": "style",
        "name": "Dynamic Node Styles",
        "settings": [
          {
            "type": "phosphorIcon",
            "key": "nodeIcon",
            "label": "Node Icon"
          },
          {
            "type": "text",
            "key": "nodeIconTemplate",
            "label": "Node Icon",
            "nested": true
          },
          {
            "type": "text",
            "key": "nodeIconColor",
            "label": "Icon Color",
            "nested": true
          },
          {
            "type": "text",
            "key": "nodeFGColor",
            "label": "Text Color",
            "nested": true
          },

          {
            "type": "text",
            "key": "nodeBGColor",
            "label": "Background",
            "nested": true
          }
        ]
      },
      {
        "section": true,
        "tag": "style",
        "name": "Group Settings",
        "dependsOn": { "setting": "treeType", "value": "groupBy" },
        "settings": [
          {
            "type": "phosphorIcon",
            "key": "groupNodeIcon",
            "label": "Icon"
          },
          {
            "type": "text",
            "key": "groupFGColor",
            "label": "Text Color",
            "nested": true
          },
          {
            "type": "text",
            "key": "groupBGColor",
            "label": "Background",
            "nested": true
          }
        ]
      },
      {
        "type": "select",
        "tag": "style",
        "label": "Flex Mode",
        "showLabel": false,
        "key": "flex",
        "showInBar": true,
        "barStyle": "buttons",
        "options": [
          {
            "label": "Shrink",
            "value": false,
            "barIcon": "Minimize",
            "barTitle": "Shrink container"
          },
          {
            "label": "Grow",
            "value": true,
            "barIcon": "Maximize",
            "barTitle": "Grow container"
          }
        ],
        "defaultValue": false
      }
    ]
  }
}
