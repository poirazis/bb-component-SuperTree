{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperTree",
    "friendlyName": "Super TreeList",
    "description": "A Tree View component for Budibase",
    "hasChildren": true,
    "showEmptyState": false,
    "actions": ["RefreshDatasource", "ClearRowSelection"],
    "styles": ["size"],
    "icon": "TreeCollapseAll",
    "context": {
      "type": "static",
      "values": [
        {
          "label": "Selected Rows",
          "key": "selected",
          "type": "array"
        },
        {
          "label": "Menu Row",
          "key": "menuRow",
          "type": "object"
        },
        {
          "label": "Node ID",
          "key": "id",
          "type": "string"
        },
        {
          "label": "Node Label",
          "key": "label",
          "type": "string"
        },
        {
          "label": "Node Children",
          "key": "children",
          "type": "array"
        }
      ]
    },
    "settings": [
      {
        "type": "dataSource",
        "key": "datasource",
        "label": "Data",
        "required": true
      },
      {
        "type": "field/sortable",
        "key": "sortColumn",
        "label": "Sort By",
        "resetOn": "datasource"
      },
      {
        "type": "select",
        "key": "sortOrder",
        "label": "Sort Order",
        "options": [
          { "label": "Ascending", "value": "ascending" },
          { "label": "Descending", "value": "descending" }
        ]
      },
      {
        "type": "filter",
        "key": "filter",
        "label": "Filter"
      },
      {
        "type": "number",
        "label": "Limit",
        "key": "limit",
        "defaultValue": 50
      },
      {
        "type": "select",
        "key": "treeType",
        "label": "Tree Type",
        "defaultValue": "flat",
        "options": [
          { "label": "Flat", "value": "flat" },
          { "label": "Recursive", "value": "recursive" },
          { "label": "Group By", "value": "groupBy" }
        ]
      },
      {
        "type": "field",
        "key": "joinField",
        "label": "Join Column",
        "resetOn": "datasource",
        "dependsOn": { "setting": "treeType", "value": "recursive" }
      },
      {
        "type": "number",
        "key": "depth",
        "label": "Max Depth",
        "dependsOn": { "setting": "treeType", "value": "recursive" }
      },
      {
        "type": "boolean",
        "key": "disabled",
        "label": "Disabled"
      },
      {
        "type": "boolean",
        "key": "rootless",
        "label": "Rootless",
        "defaultValue": true
      },
      {
        "type": "text",
        "key": "branchName",
        "label": "Root Node Text",
        "dependsOn": { "setting": "rootless", "value": true, "invert": true }
      },
      {
        "type": "boolean",
        "key": "collapsed",
        "label": "Collapsed",
        "defaultValue": true,
        "dependsOn": { "setting": "rootless", "value": true, "invert": true }
      },
      {
        "type": "boolean",
        "key": "showRelationships",
        "label": "List Rel/s"
      },
      {
        "type": "boolean",
        "key": "header",
        "label": "Header",
        "defaultValue": true
      },
      {
        "section": true,
        "name": "Header Settings",
        "dependsOn": "header",
        "collapsed": true,
        "settings": [
          {
            "type": "text",
            "key": "headerText",
            "label": "Text"
          },
          {
            "type": "boolean",
            "key": "searchable",
            "label": "Search",
            "defaultValue": true
          },
          {
            "type": "boolean",
            "key": "actionMenu",
            "label": "Header Menu",
            "defaultValue": false
          },
          {
            "type": "number",
            "key": "showButtons",
            "label": "Show Buttons",
            "min": 0,
            "defaultValue": 0,
            "dependsOn": "actionMenu"
          },
          {
            "type": "buttonConfiguration",
            "key": "menuItems",
            "dependsOn": "actionMenu",
            "nested": true,
            "wide": true
          }
        ]
      },
      {
        "section": true,
        "name": "Node Settings",
        "collapsed": true,
        "settings": [
          {
            "type": "text",
            "key": "labelTemplate",
            "label": "Label Template",
            "placeholder": "{{ Row.primaryDisplay }}",
            "nested": true
          },
          {
            "type": "boolean",
            "key": "nodeSelection",
            "label": "Node Selection"
          },
          {
            "type": "boolean",
            "key": "checkboxes",
            "label": "Checkboxes",
            "dependsOn": "nodeSelection"
          },
          {
            "type": "number",
            "key": "maxNodeSelection",
            "label": "Max Selected",
            "dependsOn": "nodeSelection",
            "min": 1,
            "defaultValue": 1
          },
          {
            "type": "text",
            "key": "selectedIds",
            "label": "Selected IDs",
            "placeholder": "Comma seperated list",
            "dependsOn": "nodeSelection"
          },
          {
            "type": "boolean",
            "key": "nodeMenu",
            "label": "Node Menu",
            "defaultValue": false
          },
          {
            "type": "number",
            "key": "nodeShowButtons",
            "label": "Show Buttons",
            "min": 0,
            "defaultValue": 0,
            "dependsOn": "nodeMenu"
          },
          {
            "type": "buttonConfiguration",
            "key": "nodeMenuItems",
            "dependsOn": { "setting": "nodeMenu", "value": true },
            "wide": true,
            "nested": true
          }
        ]
      },
      {
        "section": true,
        "name": "Relationship Settings",
        "dependsOn": "showRelationships",
        "settings": [
          {
            "type": "multifield",
            "key": "linkFields",
            "label": "Columns",
            "resetOn": ["datasource", "showRelationships"],
            "dependsOn": "showRelationships"
          },
          {
            "type": "boolean",
            "key": "linksSelectable",
            "label": "Selectable",
            "defaultValue": false
          },
          {
            "type": "buttonConfiguration",
            "key": "linkMenuItems",
            "wide": true
          }
        ]
      },
      {
        "section": true,
        "name": "Group By Settings",
        "dependsOn": { "setting": "treeType", "value": "groupBy" },
        "settings": [
          {
            "type": "field",
            "key": "groupField",
            "label": "Group By",
            "resetOn": "datasource"
          },
          {
            "type": "text",
            "key": "groupNodeLabel",
            "label": "Group Label",
            "nested": true,
            "placeholder": "{{ value }}"
          },
          {
            "type": "boolean",
            "key": "groupSelectable",
            "label": "Selectable",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "groupSelectChildren",
            "label": "Select Children",
            "dependsOn": "groupSelectable",
            "defaultValue": false
          },
          {
            "type": "boolean",
            "key": "groupMenu",
            "label": "Group Menu",
            "defaultValue": false
          },
          {
            "type": "number",
            "key": "groupShowButtons",
            "label": "Show Buttons",
            "min": 0,
            "defaultValue": 0,
            "dependsOn": "groupMenu"
          },
          {
            "type": "buttonConfiguration",
            "key": "groupMenuItems",
            "dependsOn": "groupMenu",
            "wide": true
          }
        ]
      },
      {
        "section": true,
        "name": "Events",
        "settings": [
          {
            "type": "event",
            "key": "onNodeSelect",
            "dependsOn": "nodeSelection",
            "label": "On Node Select",
            "context": [
              {
                "label": "Selected Rows",
                "key": "selectedRows"
              }
            ]
          },
          {
            "type": "event",
            "key": "onNodeClick",
            "label": "On Node Click",
            "context": [
              {
                "label": "Node Value",
                "key": "id"
              },
              {
                "label": "Node Label",
                "key": "label"
              }
            ]
          },
          {
            "type": "event",
            "dependsOn": "groupSelectable",
            "key": "onGroupSelect",
            "label": "On Group Select",
            "context": [
              {
                "label": "Node Value",
                "key": "id"
              },
              {
                "label": "Node Label",
                "key": "label"
              }
            ]
          },
          {
            "type": "event",
            "key": "onGroupClick",
            "dependsOn": { "setting": "treeType", "value": "groupBy" },
            "label": "On Group Click",
            "context": [
              {
                "label": "Node Value",
                "key": "id"
              },
              {
                "label": "Node Label",
                "key": "label"
              }
            ]
          },
          {
            "type": "event",
            "key": "onLinkSelect",
            "label": "On Link Select",
            "dependsOn": "linksSelectable",
            "context": [
              {
                "label": "Node Row",
                "key": "row"
              },
              {
                "label": "Node ID",
                "key": "id"
              },
              {
                "label": "Node Label",
                "key": "label"
              }
            ]
          },
          {
            "type": "event",
            "key": "onLinkClick",
            "dependsOn": "showRelationships",
            "label": "On Link Click",
            "context": [
              {
                "label": "Node Row",
                "key": "row"
              },
              {
                "label": "Node ID",
                "key": "id"
              },
              {
                "label": "Node Label",
                "key": "label"
              }
            ]
          }
        ]
      },
      {
        "section": true,
        "tag": "style",
        "name": "Tree Settings",
        "settings": [
          {
            "type": "select",
            "key": "controlType",
            "label": "Control Type",
            "defaultValue": "tree",
            "options": [
              { "label": "Tree View", "value": "tree" },
              { "label": "List View", "value": "list" },
              { "label": "Accordion", "value": "accordion" }
            ]
          },
          {
            "type": "boolean",
            "key": "quiet",
            "label": "Quiet"
          },
          {
            "type": "icon",
            "key": "nodeMenuIcon",
            "label": "Menu Menu Icon",
            "defaultValue": "ri-more-fill",
            "dependsOn": "nodeMenu"
          }
        ]
      },
      {
        "section": true,
        "tag": "style",
        "name": "Node Settings",
        "settings": [
          {
            "type": "icon",
            "key": "nodeIcon",
            "label": "Node Icon"
          },
          {
            "type": "text",
            "key": "nodeColorTemplate",
            "label": "Text Color",
            "placeholder": "{{ value }}"
          },
          {
            "type": "text",
            "key": "nodeBackgroundTemplate",
            "label": "Background",
            "placeholder": "{{ value }}"
          }
        ]
      },
      {
        "section": true,
        "tag": "style",
        "name": "Group Settings",
        "dependsOn": { "setting": "treeType", "value": "groupBy" },
        "settings": [
          {
            "type": "icon",
            "key": "groupNodeIcon",
            "label": "Icon"
          },
          {
            "type": "text",
            "key": "groupFGColor",
            "label": "Text Color",
            "placeholder": "{{ value }}"
          },
          {
            "type": "text",
            "key": "groupBGColor",
            "label": "Background",
            "placeholder": "{{ value }}"
          }
        ]
      }
    ]
  }
}
